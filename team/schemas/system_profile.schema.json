{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SystemProfile",
  "type": "object",
  "required": ["version", "domain", "framework", "defaults", "skills"],
  "properties": {
    "version": {"type": "integer", "minimum": 1},
    "domain": {"type": "string"},
    "framework": {"type": "string"},
    "defaults": {
      "type": "object",
      "required": ["runtime_target", "playbook"],
      "properties": {
        "runtime_target": {"type": "string", "enum": ["langgraph", "deepagent", "hybrid"]},
        "playbook": {"type": "string"}
      },
      "additionalProperties": true
    },
    "memory": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "backend": {"type": "string", "enum": ["noop", "inmemory", "mem0"]},
        "top_k": {"type": "integer", "minimum": 1, "maximum": 20},
        "min_score_to_record": {"type": "number", "minimum": 0, "maximum": 1},
        "user_id": {"type": "string"},
        "agent_id": {"type": "string"},
        "mem0": {"type": "object"}
      },
      "additionalProperties": true
    },
    "skills": {
      "type": "object",
      "required": ["directory", "enforce_exclusive", "require_declared_roles", "role_mode"],
      "properties": {
        "directory": {"type": "string"},
        "enforce_exclusive": {"type": "boolean"},
        "require_declared_roles": {"type": "boolean"},
        "role_mode": {
          "type": "object",
          "additionalProperties": {"type": "string", "enum": ["hook", "markdown", "none"]}
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
